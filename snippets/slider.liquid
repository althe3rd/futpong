{% if settings.show_slideshow %}


<div class="bannerSlider {% if settings.mobile_hide_slideshow %}hide-for-mobile{% endif %}">

    <div class="gallery js-flickity">

    	{% for i in (1..10) %}
					{% capture show %}show_slide{{i}}{% endcapture %}
					{% capture image %}home-slide{{i}}.jpg{% endcapture %}
					{% capture link %}home_slide{{i}}_link{% endcapture %}
					{% if settings[show] %}
      <div class="gallery-cell cf" style="background: url('{{ image | asset_url }}') no-repeat; background-size: cover; background-position: bottom center;">
      <div class="sliderOverlay"></div>
      	<div class="innerWrapper">
	      	<div class="leftCol-cell">
	      		<h2>Join the <span>Revolution</span></h2>
	      		<p>Description Text</p>
	      	</div>
		  	{%comment%}{{settings[link]}}{%endcomment%}
	      	<div class="rightCol-cell">
	      		<a href="#getstarted" class="button">Get started with Futpong</a>
            <div class="button-border"></div>
	      		<a href="#" class="button button-type-b">Sign up for Futpong news</a>
	      	</div>
      	</div>

      </div>
      				{% endif %}
				{% endfor %}
	
	

    </div>
    <div class="innerWrapper socialWrapper">
    <div class="socialLinks">
      <a href="#" class="facebookLike"><div class="fb-like" data-href="https://www.facebook.com/futpongchallenge/" data-width="200" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div></a>
    {% include 'social-links' %}
  </div>
  </div>
  </div>
{% endif %}
